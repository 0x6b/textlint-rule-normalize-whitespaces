{
    "name": "@0x6b/textlint-rule-normalize-whitespaces",
    "version": "1.0.2",
    "description": "textlint rule which normalizes whitespaces in the document.",
    "keywords": ["textlintrule"],
    "homepage": "https://github.com/0x6b/textlint-rule-normalize-whitespaces",
    "bugs": {
        "url": "https://github.com/0x6b/textlint-rule-normalize-whitespaces/issues"
    },
    "license": "MIT",
    "author": "0x6b",
    "files": ["lib/", "src/"],
    "main": "lib/index.js",
    "directories": {
        "test": "test"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/0x6b/textlint-rule-normalize-whitespaces.git"
    },
    "scripts": {
        "build": "textlint-scripts build",
        "precommit": "lint-staged",
        "postcommit": "git reset",
        "prepublish": "yarn build",
        "test": "jest",
        "prettier": "prettier --write \"**/*.{js,json}\""
    },
    "dependencies": {
        "execall": "^1.0.0",
        "regenerate": "^1.3.3"
    },
    "devDependencies": {
        "husky": "^0.14.3",
        "jest": "^22.1.4",
        "lint-staged": "^6.0.0",
        "prettier": "^1.10.2",
        "textlint-scripts": "^1.4.2"
    },
    "engines": {
        "node": ">= 6"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,css}": ["git stash --keep-index", "prettier --write", "git stash pop"]
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4
    },
    "babel": {
        "presets": ["env"],
        "sourceMaps": true
    },
    "jest": {
        "displayName": "textlint-rule-normalize-whitespaces",
        "collectCoverage": true,
        "verbose": true,
        "testMatch": ["<rootDir>/test/**/*.js"]
    }
}
